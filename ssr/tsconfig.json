{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2024",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"rootDir": "src",
		"outDir": "out",
		"composite": true,
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitOverride": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"tests",
		"out",
		"docs",
		"dist",
		"*.js",
		"*.cjs",
	]
}