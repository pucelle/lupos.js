{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2022",
		"lib": ["esnext", "dom", "dom.iterable"],
		"rootDir": "src",
		"outDir": "out",
		"allowJs": true,
		"esModuleInterop": true, 
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
	},
	"exclude": [
		"node_modules",
		"test",
		"out",
		"docs",
		"dist",
		"*.js",
		"*.cjs",
	]
}