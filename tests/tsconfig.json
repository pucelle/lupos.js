{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2022",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"rootDir": "src",
        "outDir": "out",
		"allowJs": true,
		"esModuleInterop": true, 
		"declaration": false,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"paths": {
			"@pucelle/lupos.js": ["./"],
		},
		"plugins": [
			{"transform": "@pucelle/lupos.compiler/src/index.ts"},
		],
	},
	"references": [
        { "path": "../" }
    ],
	"include": ["./**/*.test.ts"],
}
